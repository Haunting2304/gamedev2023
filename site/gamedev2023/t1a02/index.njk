{% extends 'njk/layouts/default.njk' %}

{% block head %}
    <title>T1-A2: Tables</title>
    <script>
        function moveCat(distance) {
            let img = document.getElementById('myImage01')
            let dist = parseInt(getComputedStyle(img).left) + distance

            let div = document.getElementById('myDiv01')
            img.style.left = `${dist}px`
            dist /= 10
            if(dist == 0) {
                div.innerHTML = `He went back to the start` 
            }
            else if(dist >= 0) {
                div.innerHTML = `He went right x${dist}` 
            }
            else {
                div.innerHTML = `He went left x${-dist}` 
            }
            if(distance >= 0) {
                img.style.transform = 'scale(1)'
            }
            else {
                img.style.transform = 'scale(-1, 1)'
            }
        }
    </script>
{% endblock %}

